<html>
    <head>
        <title><%=  title %></title>
        <!-- //path is relative to root i.e. (to the very root of my asset folder) -->
        <script src="https://kit.fontawesome.com/13fbbbf28b.js" crossorigin="anonymous"></script>
        <!-- our css should be below all other styles to overide -->
        <link rel="stylesheet" href="/css/home.css"/>
    </head>
    <body>
        <h1 id="page-heading">
            <i class="fas fa-address-book"></i>
            My Contact List
        </h1>
       
           <div class="contact-list-container">
            <ul>
                <% for(let i of contact_list) { %>
                    <li class="contact">
                        <div class="details">
                            <p><%= i.name %></p>
                            <p><%= i.phone %></p> 
                        </div>
                        <div class="delete-button">
                           <a href="/delete-contact/?id=<%= i.id %>&name=<%= i.name %>">
                            <i class="fas fa-user-times"></i>
                           </a>
                        </div>
                    </li>
                 <% } %>  
            </ul>  
           </div>    
           <div>
              <form action="/create-contact" method="post">
                <input type="text" name="name" placeholder="Enter Name" required/>
                <input type="number" name="phone" placeholder="Enter Phone" required/>
                <button type="submit">ADD CONTACT</button>
              </form>
           </div>
           <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>